#!/usr/bin/env bpftrace

BEGIN
{
  printf("Trout snort tracer\n");
  printf("Press ^C to terminate\n");
}

uprobe:../../p/install/bin/snort*:*eval*snort*Packet*,
uprobe:../../p/release/tm.so*:*eval*snort*Packet*,
uprobe:../../p/debug/tm.so*:*eval*snort*Packet*
//uprobe:../../p/debug/tm.so*:*evalEPN5snort6PacketE
{
  @eval_key[tid] = func;
  @start2[tid, func] = nsecs;

  //print(ustack());
}

uretprobe:../../p/install/bin/snort*:*eval*snort*Packet*,
uretprobe:../../p/release/tm.so*:*eval*snort*Packet*,
uretprobe:../../p/debug/tm.so*:*eval*snort*Packet*
/ @start2[tid, @eval_key[tid]] /
{
  @execute_time_ns[@eval_key[tid]] = hist(nsecs - @start2[tid, @eval_key[tid]]);
  delete(@start2[tid, @eval_key[tid]]);
  delete(@eval_key[tid]);
}



